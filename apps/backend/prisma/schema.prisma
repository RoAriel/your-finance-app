generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// ===========================================
// USER MODEL
// ===========================================
model User {
  id        String    @id @default(uuid())
  email     String    @unique
  password  String
  name      String?
  
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")
  deletedAt DateTime? @map("deleted_at")
  
  // Relaciones
  transactions Transaction[]
  categories   Category[]
  savingsAccounts SavingsAccount[]
  budgets Budget[]
  
  @@map("users")
}

// ===========================================
// TRANSACTION MODEL
// ===========================================
model Transaction {
  id          String    @id @default(uuid())
  userId      String    @map("user_id")
  type        String    // 'income' | 'expense'
  amount      Decimal   @db.Decimal(15, 2)
  currency    String    @default("ARS")
  description String?   @db.Text
  date        DateTime  @default(now())
  categoryId  String?   @map("category_id")
  savingsAccountId String?  // <--- Opcional (porque puede ser un gasto en efectivo)
  
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")
  deletedAt   DateTime? @map("deleted_at")
  
  // Relaciones
  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  category Category? @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  savingsAccount   SavingsAccount? @relation(fields: [savingsAccountId], references: [id])
  
  // Ãndices para mejorar performance
  @@index([userId])
  @@index([date])
  @@index([categoryId])
  @@index([type])
  @@map("transactions")
}

// ===========================================
// CATEGORY MODEL
// ===========================================
model Category {
  id     String  @id @default(uuid())
  userId String  @map("user_id")
  name   String
  type   String  // 'income' | 'expense' | 'both'
  isFixed   Boolean  @default(false)
  color  String? // Hex color para UI (ej: "#FF5733")
  icon   String? // Nombre del Ã­cono para UI
  
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")
  deletedAt DateTime? @map("deleted_at")
  
  // Relaciones
  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  transactions Transaction[]
  budgets Budget[]
  
  // Constraints
  @@unique([userId, name, type])
  @@index([userId])
  @@map("categories")
}

// ===========================================
// SAVINGS ACCOUNT MODEL
// ===========================================
model SavingsAccount {
  id        String   @id @default(uuid())
  name      String   // Ej: "Fondo de Emergencia", "Viaje a JapÃ³n"
  currency  String   @default("ARS") // O podrÃ­as usar un Enum si quieres ser estricto
  balance   Decimal  @default(0) @db.Decimal(15, 2) // 15 dÃ­gitos total, 2 decimales
  color     String?  // Hex code para el frontend (ej: #FF5733)
  
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  //Relaciones
  transactions Transaction[] // <--- Una cuenta tiene muchas transacciones

  // Constraints
  @@map("savings_accounts") // Buena prÃ¡ctica: nombres de tablas en plural/snake_case en la BD
}

// ===========================================
// BUDGET MODEL
// ===========================================
model Budget {
  id        String   @id @default(uuid())
  amount    Decimal  @db.Decimal(10, 2) // LÃ­mite de gasto
  month     Int      // 1 al 12
  year      Int      // 2026, etc.

  // Relaciones
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  categoryId String
  category   Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // ðŸ”’ Candado de seguridad: Un solo presupuesto por categorÃ­a/mes/aÃ±o
  @@unique([userId, categoryId, month, year])
  @@map("budgets")
}